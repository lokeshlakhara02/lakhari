# Railway.app Free Tier Environment Configuration
# These settings optimize the application for Railway's free tier limits

# Memory and Performance
NODE_OPTIONS=--max-old-space-size=400 --optimize-for-size
MAX_CONNECTIONS=40
RATE_LIMIT_MAX=50
MAX_WS_CONNECTIONS_PER_IP=3

# Logging (reduced for free tier)
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false
ENABLE_SECURITY_HEADERS=true

# Database (Railway PostgreSQL)
DATABASE_URL=${DATABASE_URL}
DB_POOL_SIZE=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# WebSocket optimization
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=300000
WS_MAX_CONNECTIONS=40

# Caching (in-memory only for free tier)
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# Security
CORS_ORIGIN=*
TRUST_PROXY=1

# Railway specific
RAILWAY_ENVIRONMENT=production
RAILWAY_OPTIMIZATION=true
RAILWAY_MEMORY_LIMIT=400
RAILWAY_CPU_LIMIT=70

# Disable features for free tier
ENABLE_CLUSTERING=false
ENABLE_REDIS=false
ENABLE_COMPRESSION=false
ENABLE_HELMET=false