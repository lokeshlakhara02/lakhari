# Database Configuration
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/lakhari

# Server Configuration
# Port for the server to listen on
PORT=8080

# Node Environment (development, production, test)
NODE_ENV=development

# CORS Configuration
# Allowed origins for CORS (comma-separated for multiple origins)
# In production, set this to your actual domain
CORS_ORIGIN=http://localhost:5173

# Optional: Production domain for CORS
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Optional: Rate Limiting
# Maximum requests per window
RATE_LIMIT_MAX=100
# Window duration in minutes
RATE_LIMIT_WINDOW_MS=15

# Optional: WebSocket Configuration
# Maximum WebSocket connections per IP
MAX_WS_CONNECTIONS_PER_IP=5
# WebSocket ping interval in milliseconds
WS_PING_INTERVAL=30000

# Optional: Security
# Enable security headers in production
ENABLE_SECURITY_HEADERS=true

# Optional: Logging
# Log level (error, warn, info, debug)
LOG_LEVEL=info
# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Optional: Analytics
# Enable analytics tracking
ENABLE_ANALYTICS=false

# Optional: File Upload (for future file sharing feature)
# Maximum file size in bytes (5MB default)
MAX_FILE_SIZE=5242880
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Optional: Session Configuration
# Session secret for encryption (generate a random string for production)
SESSION_SECRET=your-secret-key-change-this-in-production

# Optional: Turn Server Configuration (for WebRTC NAT traversal)
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_SERVER_USERNAME=username
# TURN_SERVER_CREDENTIAL=password

# Optional: Monitoring
# Enable health check endpoint
ENABLE_HEALTH_CHECK=true
